<div class="" style="margin-top: 100px;">
  <!-- <h1>This is the Bathrooms index page</h1> -->
  <div class="bathroom-cards d-flex flex-column justify-content-around align-items-center">
    <% @bathrooms.each do |bathroom| %>
        <div class="card card-container d-flex flex-row m-3 rounded-lg border" style="width: 60%;">
          <div class="left-card">
          <div class="img-container">
            <%= cl_image_tag bathroom.photos.first.key, height: 200, width: 300, crop: :fill %>
          </div>
            <div class="price-container">
              <div class="price-text"><b>Â£ <%= bathroom.price%></b><em class="per-hour"> per hour</em></div>
            </div>
          </div>
          <div class="right-card">
            <div class="text-container">
              <div class="title-text">
                <h4 class="card-title"><%= bathroom.title %></h4>
              </div>
              <div class="content-text">
                <p class="card-text text-secondary" id="address"><%= bathroom.address %></p>
                <p class="card-text text-secondary"><%= bathroom.description %></p>
              </div>
            </div>
          </div>
            <div class="d-flex text-muted flex-row card-bottom-footer">

              <div class="button-container d-flex">
                <div class=""><%= link_to "View Bathroom", bathroom_path(bathroom.id), class: "btn btn-primary btn-orange"%></div>
                <div class=""><%= link_to "Leave Review", bathroom_path(bathroom.id), class: "btn btn-primary btn-orange"%></div>
                <div class=""><%= link_to "Everything is fine", bathroom_path(bathroom.id), class: "btn btn-primary btn-orange"%></div>
              </div>
            </div>
        </div>
    <% end %>
  </div>
</div>


