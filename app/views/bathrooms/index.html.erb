<div class="">
  <!-- <h1>This is the Bathrooms index page</h1> -->
  <div class="bathroom-cards d-flex flex-column justify-content-around align-items-center">
    <% @bathrooms.each do |bathroom| %>
        <div class="card flex-row flex-wrap m-3" style="width: 60%;">
          <div class="card-header border-0">
            <%= cl_image_tag bathroom.photos.first.key, height: 200, width: 300, crop: :fill %>
          </div>
          <div class="card-body">
            <h4 class="card-title"><%= bathroom.title %></h4>
            <p class="card-text"><%= bathroom.address %></p>
          </div>
           <div class="w-100"></div>
            <div class="card-footer w-100 text-muted flex-row">
              <p class="float-left">Â£ <%= bathroom.price %> per hour</p>
              <p class="float-right"><%= link_to "View Bathroom", bathroom_path(bathroom.id), class: "btn btn-primary" %></p>
            </div>
        </div>
    <% end %>
  </div>
</div>


